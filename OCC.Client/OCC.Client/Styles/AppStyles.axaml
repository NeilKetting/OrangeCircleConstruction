    <!-- Text Styles -->
    <Style Selector="TextBlock.H1">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryDark}"/>
    </Style>
    
    <Style Selector="TextBlock.LabelSmall">
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{DynamicResource TextTertiarySlate}"/>
    </Style>

	<!-- ========================================================================= -->
	<!-- SIDEBAR & NAVIGATION -->
	<!-- ========================================================================= -->

	<Style Selector="StackPanel.SidebarItem">
		<Setter Property="Height" Value="45"/>
		<Setter Property="Spacing" Value="15"/>
		<Setter Property="Margin" Value="0,2"/>
		<Setter Property="ClipToBounds" Value="False"/>
	</Style>

	<Style Selector="Button.SidebarButton">
		<Setter Property="Background" Value="Transparent"/>
		<Setter Property="Foreground" Value="{DynamicResource TextPrimaryDark}"/>
		<Setter Property="HorizontalAlignment" Value="Stretch"/>
		<Setter Property="Padding" Value="20,0"/>
		<Setter Property="CornerRadius" Value="8"/>
		<Setter Property="Margin" Value="10,2"/>
		<Setter Property="ClipToBounds" Value="False"/>
		<Setter Property="Transitions">
			<Transitions>
				<BrushTransition Property="Background" Duration="0:0:0.2"/>
			</Transitions>
		</Setter>
	</Style>

    <Style Selector="Button.SidebarButton:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="#15000000"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryDark}"/>
    </Style>

    <Style Selector="Button.SidebarButton:pressed /template/ ContentPresenter">
        <Setter Property="Opacity" Value="0.8"/>
        <Setter Property="RenderTransform" Value="scale(0.98)"/>
    </Style>

    <Style Selector="Button.SidebarButton.Active">
        <Setter Property="Background" Value="{DynamicResource PrimaryTealLight}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryTeal}"/>
        <Setter Property="BorderThickness" Value="4,0,0,0"/>
    </Style>

    <Style Selector="Button.SidebarButton.Active:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource PrimaryTealLight}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryTeal}"/>
        <Setter Property="BorderThickness" Value="4,0,0,0"/>
        <Setter Property="Opacity" Value="0.85"/>
    </Style>

    <!-- TopBar Styles -->
    <Style Selector="Border.TopBar">
        <Setter Property="Background" Value="{DynamicResource SurfaceWhite}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderGray}"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="Height" Value="60"/>
    </Style>

    <Style Selector="Button.TabButton">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryGray}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Padding" Value="15,0"/>
        <Setter Property="Height" Value="50"/>
        <Setter Property="Margin" Value="0,5"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.2"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Button.TabButton:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="#15000000"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryTealHover}"/>
    </Style>

    <Style Selector="Button.TabButton:pressed /template/ ContentPresenter">
        <Setter Property="Opacity" Value="0.8"/>
        <Setter Property="RenderTransform" Value="scale(0.98)"/>
    </Style>

    <Style Selector="Button.TabButton.Active">
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryDark}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource AccentOrange}"/>
        <Setter Property="BorderThickness" Value="0,0,0,3"/>
    </Style>

    <Style Selector="Button.TabButton.Active:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="#10000000"/>
        <Setter Property="BorderBrush" Value="{DynamicResource AccentOrange}"/>
        <Setter Property="BorderThickness" Value="0,0,0,3"/>
    </Style>

	<!-- ========================================================================= -->
	<!-- FLYOUTS & MENUS -->
	<!-- ========================================================================= -->

	<Style Selector="FlyoutPresenter.SidebarFlyout">
		<Setter Property="Padding" Value="15"/>
		<Setter Property="MinWidth" Value="320"/>
		<Setter Property="Background" Value="Transparent"/>
		<Setter Property="BorderThickness" Value="0"/>
		<Setter Property="CornerRadius" Value="6"/>
        <Setter Property="ClipToBounds" Value="False"/>
	</Style>

    <Style Selector="FlyoutPresenter.SidebarFlyout /template/ Border#PART_BorderElement">
        <!-- BoxShadow Format: OffsetX OffsetY BlurRadius Spread Color -->
        <!-- Increase BlurRadius (3rd value) for softer shadow. Increase Color Alpha (first 2 hex digits) for darkness. -->
        <Setter Property="BoxShadow" Value="0 10 50 0 #45000000"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="#94A3B8"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="ClipToBounds" Value="False"/>
    </Style>

	<Style Selector="MenuItem.ProfileHeader">
		<Setter Property="VerticalAlignment" Value="Center"/>
		<Setter Property="Template">
			<ControlTemplate>
				<TextBlock Text="{TemplateBinding Header}" 
						   FontSize="11" 
						   FontWeight="Bold" 
						   Foreground="#94A3B8"
						   Padding="16,14,16,10"/>
			</ControlTemplate>
		</Setter>
	</Style>

	<Style Selector="MenuItem.ProfileItem">
