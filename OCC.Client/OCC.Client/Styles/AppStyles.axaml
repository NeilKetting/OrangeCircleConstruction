<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!-- ========================================================================= -->
	<!-- LAYOUT & CONTAINERS -->
	<!-- ========================================================================= -->

	<!-- Card Style - Used for main login/register containers -->
	<Style Selector="Border.Card">
		<Setter Property="Background" Value="{DynamicResource SurfaceWhite}" />
		<Setter Property="Padding" Value="40" />
		<Setter Property="CornerRadius" Value="8" />
		<Setter Property="BoxShadow" Value="0 10 30 0 #20000000" />
	</Style>

	<!-- ========================================================================= -->
	<!-- INPUT CONTROLS -->
	<!-- ========================================================================= -->

	<!-- Standard TextBox Style -->
	<Style Selector="TextBox.FormInput">
		<Setter Property="Height" Value="45" />
		<Setter Property="Padding" Value="12,8" />
		<Setter Property="BorderThickness" Value="1" />
		<Setter Property="BorderBrush" Value="{DynamicResource BorderGray}" />
		<Setter Property="Background" Value="{DynamicResource SurfaceWhite}" />
		<Setter Property="Foreground" Value="{DynamicResource TextPrimaryDark}" />
        <Setter Property="CaretBrush" Value="{DynamicResource TextPrimaryDark}" />
		<Setter Property="CornerRadius" Value="5" />
		<Setter Property="VerticalContentAlignment" Value="Center" />        
	</Style>

    <!-- Fix for unreadable dark gray hover/focus on TextBoxes -->
    <Style Selector="TextBox.FormInput:pointerover /template/ Border#PART_BorderElement">
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryTeal}" />
        <Setter Property="Background" Value="{DynamicResource SurfaceWhite}" />
    </Style>
    
    <Style Selector="TextBox.FormInput:focus /template/ Border#PART_BorderElement">
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryTeal}" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="Background" Value="{DynamicResource SurfaceWhite}" />
    </Style>

    <!-- Global Watermark/Placeholder Fix -->
    <Style Selector="TextBox /template/ TextBlock#PART_Watermark">
        <Setter Property="Foreground" Value="{DynamicResource TextTertiarySlate}" />
    </Style>
    <Style Selector="TextBox:pointerover /template/ TextBlock#PART_Watermark">
        <Setter Property="Foreground" Value="{DynamicResource TextTertiarySlate}" />
    </Style>
    <Style Selector="TextBox:focus /template/ TextBlock#PART_Watermark">
        <Setter Property="Foreground" Value="{DynamicResource TextTertiarySlate}" />
    </Style>

    <Style Selector="ComboBox /template/ TextBlock#PART_PlaceholderText">
        <Setter Property="Foreground" Value="{DynamicResource TextTertiarySlate}" />
    </Style>
    <Style Selector="ComboBox:pointerover /template/ TextBlock#PART_PlaceholderText">
        <Setter Property="Foreground" Value="{DynamicResource TextTertiarySlate}" />
    </Style>

	<!-- Standard ComboBox Style -->
	<Style Selector="ComboBox.FormInput">
		<Setter Property="Height" Value="45" />
		<Setter Property="Padding" Value="12,8" />
		<Setter Property="BorderThickness" Value="1" />
		<Setter Property="BorderBrush" Value="{DynamicResource BorderGray}" />
		<Setter Property="Background" Value="{DynamicResource SurfaceWhite}" />
		<Setter Property="Foreground" Value="{DynamicResource TextPrimaryDark}" />
		<Setter Property="CornerRadius" Value="5" />
		<Setter Property="VerticalContentAlignment" Value="Center" />
		<Setter Property="HorizontalAlignment" Value="Stretch" />
	</Style>

	<!-- ========================================================================= -->
	<!-- BUTTONS -->
	<!-- ========================================================================= -->

	<!-- Primary Action Button (Teal) -->
	<Style Selector="Button.Primary">
		<Setter Property="Background" Value="{DynamicResource PrimaryTeal}" />
		<Setter Property="Foreground" Value="White" />
		<Setter Property="Height" Value="45" />
		<Setter Property="HorizontalAlignment" Value="Stretch" />
		<Setter Property="HorizontalContentAlignment" Value="Center" />
		<Setter Property="VerticalContentAlignment" Value="Center" />
		<Setter Property="FontWeight" Value="SemiBold" />
		<Setter Property="CornerRadius" Value="4" />
	</Style>
	<Style Selector="Button.Primary:pointerover /template/ ContentPresenter">
		<Setter Property="Background" Value="{DynamicResource PrimaryTealHover}" />
		<Setter Property="Foreground" Value="White" />
	</Style>

	<!-- Large Primary Button (Used in Register/Landing) -->
	<Style Selector="Button.Primary.Large">
		<Setter Property="Height" Value="55" />
		<Setter Property="FontSize" Value="18" />
		<Setter Property="FontWeight" Value="Bold" />
	</Style>

	<!-- Social Login Button (Light Gray) -->
	<Style Selector="Button.Social">
		<Setter Property="Background" Value="{DynamicResource AppBackgroundSlate}" />
		<Setter Property="HorizontalAlignment" Value="Stretch" />
		<Setter Property="Height" Value="45" />
		<Setter Property="CornerRadius" Value="4" />
		<Setter Property="BorderThickness" Value="0" />
	</Style>

	<!-- Link Button (Transparent, for navigation or secondary actions) -->
	<Style Selector="Button.Link">
		<Setter Property="Background" Value="Transparent" />
		<Setter Property="Foreground" Value="{DynamicResource PrimaryTeal}" />
		<Setter Property="FontWeight" Value="Bold" />
		<Setter Property="FontSize" Value="13" />
		<Setter Property="BorderThickness" Value="0" />
		<Setter Property="Padding" Value="0" />
		<Setter Property="Cursor" Value="Hand" />
	</Style>
	<Style Selector="Button.Link:pointerover /template/ ContentPresenter">
		<Setter Property="Background" Value="Transparent" />
		<Setter Property="Foreground" Value="{DynamicResource PrimaryTealHover}" />
	</Style>

    <!-- Icon Button (Transparent, usually for toolbars) -->
	<Style Selector="Button.IconButton">
		<Setter Property="Background" Value="Transparent" />
		<Setter Property="FontSize" Value="12" />
		<Setter Property="BorderThickness" Value="0" />
		<Setter Property="Padding" Value="0" />
		<Setter Property="Cursor" Value="Hand" />
	</Style>
	<Style Selector="Button.IconButton:pointerover /template/ ContentPresenter">
		<Setter Property="Cursor" Value="Hand" />
	</Style>

	<!-- Brand Styling -->
	<Style Selector="TextBlock.BrandName">
		<Setter Property="Foreground" Value="White" />
		<Setter Property="FontSize" Value="36" />
		<Setter Property="FontWeight" Value="Bold" />
		<Setter Property="VerticalAlignment" Value="Center" />
	</Style>
	
	<Style Selector="Border.LogoContainer">
		<Setter Property="Width" Value="140" />
		<Setter Property="Height" Value="140" />
		<Setter Property="CornerRadius" Value="80" />
		<Setter Property="Background" Value="White" />
		<Setter Property="Padding" Value="5" />
	</Style>

    <!-- SVG Icon Style -->
	<Style Selector="PathIcon.IconStyle">
		<Setter Property="Foreground" Value="{DynamicResource TextSecondaryDark}" />
	</Style>

