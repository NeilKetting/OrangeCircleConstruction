<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:OCC.Client.ViewModels.Time"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="OCC.Client.Views.Time.OvertimeView"
             x:DataType="vm:OvertimeViewModel">

    <Grid ColumnDefinitions="*, 30, *">
        <!-- Form -->
        <ScrollViewer Grid.Column="0">
            <StackPanel Spacing="20" Margin="20">
                <TextBlock Text="Request Overtime" FontSize="20" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimary}"/>

                <!-- Employee -->
                <!-- Is Team Request Toggle -->
                <CheckBox Content="Request for Entire Team" IsChecked="{Binding IsTeamRequest}"/>

                <!-- Employee (Visible if NOT Team) -->
                <StackPanel Spacing="5" IsVisible="{Binding !IsTeamRequest}">
                    <TextBlock Text="Employee" FontWeight="Medium"/>
                    <ComboBox ItemsSource="{Binding Employees}" 
                              SelectedItem="{Binding SelectedEmployee}"
                              HorizontalAlignment="Stretch"
                              PlaceholderText="Select Employee">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DisplayName}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>

                <!-- Team (Visible if Team) -->
                <StackPanel Spacing="5" IsVisible="{Binding IsTeamRequest}">
                    <TextBlock Text="Team" FontWeight="Medium"/>
                    <ComboBox ItemsSource="{Binding Teams}" 
                              SelectedItem="{Binding SelectedTeam}"
                              HorizontalAlignment="Stretch"
                              PlaceholderText="Select Team">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>

                <!-- Date -->
                <StackPanel Spacing="5">
                    <TextBlock Text="Date" FontWeight="Medium"/>
                    <DatePicker SelectedDate="{Binding Date}" HorizontalAlignment="Stretch"/>
                </StackPanel>

                <!-- Time Range -->
                <Grid ColumnDefinitions="*, 10, *">
                    <StackPanel Grid.Column="0" Spacing="5">
                        <TextBlock Text="Start Time" FontWeight="Medium"/>
                        <TimePicker SelectedTime="{Binding StartTime}" HorizontalAlignment="Stretch"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="2" Spacing="5">
                        <TextBlock Text="End Time" FontWeight="Medium"/>
                        <TimePicker SelectedTime="{Binding EndTime}" HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </Grid>

                <!-- Reason -->
                <StackPanel Spacing="5">
                    <TextBlock Text="Reason" FontWeight="Medium"/>
                    <TextBox Text="{Binding Reason}" Height="80" AcceptsReturn="True" Watermark="Why is overtime required?"/>
                </StackPanel>

                <!-- Submit -->
                <Button Command="{Binding SubmitCommand}" 
                        Content="Submit Request" 
                        Theme="{StaticResource PrimaryButton}"
                        HorizontalAlignment="Right"
                        IsEnabled="{Binding !IsSubmitting}"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Vertical Separator -->
        <Border Grid.Column="1" Background="{DynamicResource BorderGray}" Width="1" VerticalAlignment="Stretch" Margin="0,20"/>

        <!-- History List -->
        <Grid Grid.Column="2" RowDefinitions="Auto, *" Margin="20">
            <TextBlock Grid.Row="0" Text="My Overtime Requests" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
            
            <DataGrid Grid.Row="1" ItemsSource="{Binding MyRequests}" IsReadOnly="True" GridLinesVisibility="Horizontal">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat='d'}" Width="100"/>
                    <DataGridTextColumn Header="Hours" Binding="{Binding DurationHours, StringFormat='N1'}" Width="60"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                    <DataGridTextColumn Header="Reason" Binding="{Binding Reason}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>
