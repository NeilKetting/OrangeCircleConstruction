<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:OCC.Client.ViewModels.Orders"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="800"
             x:Class="OCC.Client.Views.Orders.InventoryView"
             x:DataType="vm:InventoryViewModel">
             
    <Grid RowDefinitions="Auto, *">
        <!-- Header / Tools -->
        <Border Grid.Row="0" Classes="TopHeader">
            <Grid ColumnDefinitions="Auto, *, Auto">
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="20">
                    <TextBlock Text="INVENTORY" Classes="HeaderTitle" VerticalAlignment="Center"/>
                    <TextBox Width="250" Text="{Binding SearchQuery}" Watermark="Search Product..." Classes="SearchBox"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="10">
                    <Button Classes="Secondary" Content="Adjustment" IsEnabled="False"/>
                    <Button Classes="Primary" Content="Add Item" Command="{Binding RefreshInventoryCommand}"/> <!-- Temp Command or Add logic -->
                </StackPanel>
            </Grid>
        </Border>

        <!-- Grid -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding InventoryItems}" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True" 
                  HeadersVisibility="Column"
                  GridLinesVisibility="Horizontal"
                  Background="White"
                  BorderThickness="0">
            
            <DataGrid.Columns>
                <DataGridTextColumn Header="PRODUCT" Binding="{Binding ProductName}" Width="2*" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryDark}"/>
                <DataGridTextColumn Header="CATEGORY" Binding="{Binding Category}" Width="*" Foreground="{DynamicResource TextSecondaryDark}"/>
                <DataGridTextColumn Header="LOCATION" Binding="{Binding Location}" Width="*" Foreground="{DynamicResource TextSecondaryDark}"/>
                <DataGridTextColumn Header="ON HAND" Binding="{Binding QuantityOnHand}" Width="0.8*" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryDark}"/>
                <DataGridTextColumn Header="UNIT" Binding="{Binding UnitOfMeasure}" Width="0.5*" Foreground="{DynamicResource TextSecondaryDark}"/>
                
                <DataGridTemplateColumn Header="STATUS" Width="1.2*">
                     <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border CornerRadius="4" Padding="8,2" VerticalAlignment="Center" HorizontalAlignment="Left"
                                    Background="{Binding InventoryStatus, Converter={StaticResource StatusColorConverter}, ConverterParameter=Background}">
                                <TextBlock Text="{Binding InventoryStatus}" 
                                           FontSize="11" FontWeight="SemiBold" 
                                           Foreground="{Binding InventoryStatus, Converter={StaticResource StatusColorConverter}, ConverterParameter=Foreground}"/>
                            </Border>
                        </DataTemplate>
                     </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
