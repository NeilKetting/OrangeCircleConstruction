<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:OCC.Client.ViewModels.Shared"
             x:Class="OCC.Client.Views.Shared.SettingsMenuView"
             x:DataType="vm:SidebarViewModel">

    <Border Background="White" 
            BorderBrush="{DynamicResource BorderGray}" 
            BorderThickness="1" 
            CornerRadius="8" 
            Padding="0,5"
            Margin="15"
            BoxShadow="0 2 15 5 #292828">
        <StackPanel Background="Transparent" Margin="5,5">
            <!-- Company Settings Group -->
            <TextBlock Text="SETTINGS" Classes="LabelSmall" Margin="25,10,20,5"/>
            
            <Button Classes="SidebarButton" Command="{Binding UsersTeamsCommand}" IsVisible="{Binding CanManageUsers}">
                <StackPanel Classes="SidebarItem" Orientation="Horizontal" Spacing="10">
                    <PathIcon Data="{StaticResource IconUserManagement}" Width="16" Height="16" Foreground="{DynamicResource TextSecondaryGray}"/>
                    <TextBlock Text="Users" VerticalAlignment="Center" FontSize="14"/>
                </StackPanel>
            </Button>
            
            <Button Classes="SidebarButton" Command="{Binding AlertsCommand}">
                <StackPanel Classes="SidebarItem" Orientation="Horizontal" Spacing="10">
                    <PathIcon Data="{StaticResource IconAlert}" Width="16" Height="16" Foreground="{DynamicResource TextSecondaryGray}"/>
                    <TextBlock Text="Alerts" VerticalAlignment="Center" FontSize="14"/>
                </StackPanel>
            </Button>
            
            <Button Classes="SidebarButton" Command="{Binding AuditLogCommand}" Height="50">
                <StackPanel Classes="SidebarItem" Orientation="Horizontal" Spacing="10">
                     <PathIcon Data="{StaticResource IconAudit}" Width="16" Height="16" Foreground="{DynamicResource TextSecondaryGray}"/>
                     <TextBlock Text="Audit Log" VerticalAlignment="Center" FontSize="14"/>
                </StackPanel>
            </Button>
            
            <Separator Classes="MenuSeparator" Margin="15,10"/>
    
            <!-- Personal Preferences Group -->
            <TextBlock Text="PERSONAL PREFERENCES" Classes="LabelSmall" Margin="25,10,20,5"/>
            
            <Button Classes="SidebarButton" Command="{Binding ToggleThemeCommand}">
                <StackPanel Classes="SidebarItem" Orientation="Horizontal" Spacing="10">
                    <PathIcon Data="{StaticResource IconDarkModel}" Width="16" Height="16" Foreground="{DynamicResource TextSecondaryGray}"/>
                    <TextBlock Text="Enable Dark Mode" VerticalAlignment="Center" FontSize="14"/>
                </StackPanel>
            </Button>
            
            <Button Classes="SidebarButton" Command="{Binding MyProfileCommand}">
                <StackPanel Classes="SidebarItem" Orientation="Horizontal" Spacing="10">
                     <PathIcon Data="{StaticResource IconProfile}" Width="16" Height="16" Foreground="{DynamicResource TextSecondaryGray}"/>
                    <TextBlock Text="My Profile" VerticalAlignment="Center" FontSize="14"/>
                </StackPanel>
            </Button>
            
            <Button Classes="SidebarButton" Command="{Binding LogoutCommand}">
                <StackPanel Classes="SidebarItem" Orientation="Horizontal" Spacing="10">
                    <PathIcon Data="{StaticResource IconLogout}" Width="16" Height="16" Foreground="{DynamicResource TextSecondaryGray}"/>
                    <TextBlock Text="Logout" VerticalAlignment="Center" FontSize="14"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Border>
</UserControl>
